# This file is for environment-specific or language specific configuration.
# This file is also for trying out temporary settings.

# Temporary Settings #
alias bucket='cd ~/Documents/Code/Bucket'
export PATH=${PATH}:/usr/local/sbin

# Plan 9 #
PLAN9=${HOME}/Documents/Code/Repositories/plan9 export PLAN9
PATH=${PATH}:${PLAN9}/bin export PATH
alias acme='acme -f /mnt/font/Monaco/12a/font'
alias l='${HOME}/Documents/Code/Repositories/plan9/bin/ls'

# Golang #
# GOPATH must be set to build and install packages outside the standard Go tree
# It must contain an src directory with your packages underneath.
GOPATH=${HOME}/Documents/Code/Environments/go export GOPATH
PATH=${PATH}:${GOPATH}/bin export PATH

# Clojure #
PATH=${PATH}:${HOME}/.cljr/bin export PATH

# Ruby #
alias ruby='/usr/local/bin/ruby'

# OS X Specific. #
alias jsc='/System/Library/Frameworks/JavaScriptCore.framework/Versions/Current/Resources/jsc'
export EDITOR='mvim -f -c "au VimLeave * !open -a Terminal"'
alias isim='open /Applications/Xcode.app/Contents/Developer/Platforms/iPhoneSimulator.platform/Developer/Applications/iPhone\ Simulator.app'

# hg diffs using vimdiff on the file specified as the first parameter.
hgd() {
    hg cat $1 | mvim - -c  ":vert diffsplit $1" -c "map q :qa!<CR>";
}

function mailpy {
    python $HOME/Code/Utilities/mail.py $*
}

# Adds a column of numbers.
function addc { 
    awk '{total += $1} END {print total}'
}
